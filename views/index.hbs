<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="../public/index.css" />
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet" />
		<link href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css" rel="stylesheet" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
	</head>

	<body>
		{{>sidebar}}
		<section class="home">
			<div class="wrapper">
				<div class="container">
					<div class="heading">
						<ul>
							<li id="logo"><img src="public/images/logo.png" width="28px" height="28px" />
								<h1>Inventory</h1>
							</li>
							<li id="button">
								<a href="/add"><button>Add item</button></a>
								<a href="/remove"><button id="Remove">Remove</button></a>
								
							</li>
						</ul>
					</div>
					<div class="mainBody">
						<div class="titleBar">
							<ul>
								<li>
									<h3>Item code</h3>
								</li>
								<li>
									<h3>Name</h3>
								</li>
								<li>
									<h3>Image</h3>
								</li>
								<li>
									<h3>Category</h3>
								</li>
								<li>
									<h3>On hand</h3>
								</li>
								<li>
									<h3>Actions</h3>
								</li>
							</ul>
						</div>
						<div class="listbody">
							{{#each items}}
						
							<ul>
								<li>
									<h3>{{itemCode}}</h3>
								</li>
								<li>
									<h3>{{itemName}}</h3>
								</li>
								<li>
									<img src="{{image}}"  width="80px" height="80px" id="listimg">
								</li>
								<li>
									<h3>{{category}}</h3>
								</li>
								<li>
									<h3>{{onhand}}</h3>
								</li>
								<li id='item-buttons'>
									<form action="/update/{{itemCode}}" method="get">
										<button id="updateButton" >
											<span class="material-symbols-outlined">
													edit
											</span>
										</button>
									</form>
									<form action="/remove/{{itemCode}}" method="post">
										<button id="deleteButton" >
											<span class="material-symbols-outlined">
												delete
											</span>
										</button>
									</form>
								</li>
							</ul>
							

							{{/each}}
							
						</div>
					</div>
					{{!-- <div class="footer">
						<h1>pagination here</h1>
					</div> --}}
				</div>
			</div>
		</section>
		<script src="../public/index.js"></script>
	</body>

</html>